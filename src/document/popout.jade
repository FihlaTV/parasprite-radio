doctype html
html
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')

		title #{config.radio.title}

		link(rel='icon', type='image/x-icon', href='/favicon.ico')
		link(rel='stylesheet', type='text/css', href='/build/style/popout.css')
	body#body

		#popout
			.container

				#player
					.leftside
						//- a(href='')
							img#logo(src='/img/icons/parasprite-radio.png', alt='Logo')

						a#coverlink(href='/api/now/art/original', target='_blank')
							img#cover(src='/api/now/art/tiny')
					.mid
						button#playstopbtn Play

					.rightside
						#volume
							div
								input#radioVolume(type='range', min=0, max=1, step=0.01, value=0.8)
								select#streamSelect
									option(value='', selected) Automatic detection
									option(value='radio_mobile') iPhone AAC+ 64k
									option(value='radio_mobile_vorbis') Low Quality OGG Vorbis
									option(value='radio_normal') Low Quality MP3 128k
									option(value='radio') High Quality MP3 320k
									option(value='radio_opus') High Quality OPUS 128k
									option(value='gnr') Galaxy News Radio
								= ' '
								a#streamLink(href='/stream', target='_blank')
									img(src='/img/icons/popout.svg', alt='Stream')
						.legend
							span#listenercount
							img.listenersicon(src='/img/icons/listeners.png')

				#nowplayingwrap
					#nowtitle
					#nowartist


		#footer
			.container
					| Stream url: #{''}
					a(target='_blank', href='#{config.general.baseurl}stream/') #{config.general.baseurl}stream/

		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga')

			ga('create', 'UA-5181445-5', 'auto')
			ga('send', 'pageview')

		script.
			var config = !{JSON.stringify(simpleconfig)}
		script(type='text/javascript', src='/build/script/popout.js')

