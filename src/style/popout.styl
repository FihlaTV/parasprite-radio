
@import '_vars'
@import 'base'
@import 'radio'

.container {
	min-width: 320px;
	max-width: 400px;
	margin: 0 auto;
	padding: 0 10px;
	text-align: center;
	overflow hidden
}

#popout {
	background-color: #2d2d2d;
}

#logo {
	width: 80px;
	height: 80px;
	margin: 10px;
	float: left;
}

#playstopbtn {
	float none !important
	margin: 20px 10px;
}

#nowplayingwrap {
	clear: both;
	text-align: left;
	display: block;
	margin-top: 20px;
	padding-bottom: 20px;
}

#footer {
	margin-top: 5px;
	opacity: 0.4;
}

#player

	position relative
	height 80px

	.mid
		right 50px

	.rightside
		width 50px

	#cover
		margin-top: 10px;
		margin-bottom: 10px;
		margin-right: 20px;
		height: 80px;
		border: 1px solid #202020;
		background-color: black;

	#volume
		right 32px
		top: 83px;
		& > div
			margin-left: -180px

	.legend
		right 2px
		top: 24px;

